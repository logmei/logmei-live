.search_bar{
  border-radius: 36rpx;
  border: 2rpx solid #979797;
  display: flex;
  align-items: center;
  width: 100%;
  height: 72rpx;
}

.search_bar_icon{
  width: 32rpx;
  height: 32rpx;
  margin-left: 28rpx;
  flex-shrink: 0;
}
.search_bar_input{
  flex-grow: 1;
  margin-left: 18rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}

.search_bar_input_placeholder{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #949494;
 
}

.search_bar_vertical_line{
  width: 2rpx;
  height: 34rpx;
  background: #D8D8D8;
  margin-right: 28rpx;
}

.search_bar_text{
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 30rpx;
  margin-right: 32rpx;
}

.search_bar_close{
  flex-shrink: 0;
  width: 32rpx;
  height: 32rpx;
  margin: 0 22rpx 0 10rpx;
}